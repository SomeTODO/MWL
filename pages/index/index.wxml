<!--index.wxml-->
<view class="page">
    <view class="page__hd">
    </view>
    <view class="page__bd page__bd_spacing">
        <view class="weui-flex">
            <view class="weui-flex__item"><view class="placeholder">
            <image class="weui-register__img" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
            </view>
        </view>
        </view>
        <view class="weui-flex">
            <view class="weui-flex__item">
              <view bindtap="bindViewTap" class="placeholder">
                <button class="weui-btn" type="primary">注册</button>
              </view>
            </view>
            <view bindtap="bindViewLog" class="weui-flex__item">
              <view class="placeholder">
                <button class="weui-btn" type="primary">日志</button>
              </view>
            </view>
        </view>
        <view class="weui-flex">
            <view class="weui-flex__item">
              <view bindtap="bindCargoRelease" class="placeholder">
                <button class="weui-btn" type="primary">货物发布</button>
              </view>
            </view>
            <view bindtap="bindViewLog" class="weui-flex__item">
              <view class="placeholder">
                <button class="weui-btn" type="primary">货物查看</button>
              </view>
            </view>
        </view>
    </view>
</view>

